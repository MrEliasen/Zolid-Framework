Options -Indexes

<IfModule mod_rewrite.c>
    SetEnv HTTP_MOD_REWRITE On

	RewriteEngine On
	RewriteCond %{REQUEST_FILENAME} !-f
	RewriteCond %{REQUEST_FILENAME} !-d

	# =====================================================================
	# Enable Friendly URLs - uncomment by remove the # from the rules below
	# =====================================================================

	################################
	#  This is for page requests   #
	################################
	 RewriteCond %{REQUEST_URI} !^/ajax
	 RewriteCond %{REQUEST_URI} !^/forum/thread
	 RewriteCond %{REQUEST_URI} !^/forum/category
	 RewriteRule ^([a-z0-9_-]+)$ index.php?p=$1 [L,QSA,NC]

	################################
	#  This is for AJAX requests   #
	################################
	 RewriteCond %{REQUEST_URI} ^/ajax
	 RewriteRule ^ajax(/*)$ index.php?p=404 [L,QSA,NC]
	 RewriteRule ^ajax/(.*)$ index.php?p=ajax&a=$1 [L,QSA,NC]

	################################
	#  This is for FORUM requests  #
	################################
	 RewriteCond %{REQUEST_URI} ^/forum/thread
	 RewriteRule ^forum/thread/([0-9]+)/?([a-zA-Z0-9\-\.]+)?/?([0-9]+)?$ index.php?p=forum_thread&thread=$1&page=$3 [L,QSA,NC]

	################################
	#  This is for FORUM requests  #
	################################
	 RewriteCond %{REQUEST_URI} ^/forum/category
	 RewriteRule ^forum/category/([0-9]+)/?([a-zA-Z0-9\-\.]+)?/?([0-9]+)?$ index.php?p=forum_category&category=$1&page=$3 [L,QSA,NC]
</IfModule>